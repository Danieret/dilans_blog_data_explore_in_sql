CREATE TABLE first_time_readers (
my_date TEXT,
event_type TEXT,
country TEXT,
user_id BIGINT,
source TEXT,
continent TEXT);

COMMIT;

COPY first_time_readers FROM '/home/dataguy88/dilan_travel_guide/first_time_readers.csv' DELIMITER ';';

COMMIT;

SELECT * FROM first_time_readers LIMIT 10;

--------------------------------------------


